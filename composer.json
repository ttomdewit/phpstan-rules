{
  "name": "ttomdewit/phpstan-rules",
  "type": "phpstan-extension",
  "description": "Custom, opinionated and sometimes strict rules for PHPStan",
  "license": [
    "MIT"
  ],
  "authors": [
    {
      "name": "Tom de Wit",
      "email": "ttomdewit@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "phpstan/phpstan": "^1.7.9"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5.20",
    "malukenho/mcbumpface": "^1.1.5"
  },
  "autoload": {
    "psr-4": {
      "Tomdewit\\PHPStanRules\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tomdewit\\PHPStanRules\\Tests\\": "tests"
    }
  },
  "extra": {
    "phpstan": {
      "includes": [
        "rules.neon"
      ]
    }
  }
}
